<Page
    x:Class="garraf.EncomendaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:garraf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="487,30,0,0" TextWrapping="Wrap" Text="Sr.Garrafinhas" VerticalAlignment="Top" FontSize="48"/>
        <Button x:ConnectionId='1' Content="Fazer Encomenda" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="91,623,0,0" Width="170" Height="69"                       />

        <TextBox x:ConnectionId='2' Name="Nome" HorizontalAlignment="Left" Margin="91,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Nome" Width="296" />
        <TextBox x:ConnectionId='3' Name="Morada" HorizontalAlignment="Left" Margin="91,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Morada" Width="296" />
        <TextBox x:ConnectionId='4' Name="Total" HorizontalAlignment="Left" Margin="91,537,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Total" Width="96" />
        <ListView x:ConnectionId='5' Name="ListaProdutos" SelectionMode="Multiple" Header="Produtos Disponíveis" HorizontalAlignment="Left" Height="100" Margin="91,390,0,0" VerticalAlignment="Top" Width="296" RenderTransformOrigin="0.49,0.5"                                             />
        <Button x:ConnectionId='6' Content="Adicionar Produto" HorizontalAlignment="Left" Margin="91,500,0,0" VerticalAlignment="Top"                     />
        <TextBox x:ConnectionId='7' Name="NomeCliente" HorizontalAlignment="Left" Margin="938.191,205.134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Nome do cliente" Width="296" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <TextBox x:ConnectionId='8' Name="MoradaCliente" HorizontalAlignment="Left" Margin="938.191,310.134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Morada do cliente" Width="296" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <TextBox x:ConnectionId='9' Name="TotalDetalhe" HorizontalAlignment="Left" Margin="936.188,525.076,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Header="Preço Total" Width="96" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <ListView x:ConnectionId='10' Name="ListaDetalhes" Header="Produtos encomendados" HorizontalAlignment="Left" Height="100" Margin="938.191,420.137,0,0" VerticalAlignment="Top" Width="296" RenderTransformOrigin="0.49,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <TextBlock x:ConnectionId='11' HorizontalAlignment="Left" Margin="91,140,0,0" TextWrapping="Wrap" Text="Preencher dados de encomenda" VerticalAlignment="Top"                                              />
        <TextBlock HorizontalAlignment="Left" Margin="1037,144,0,0" TextWrapping="Wrap" Text="Detalhes de encomenda" VerticalAlignment="Top"/>
        <ListView x:ConnectionId='12' Name="Encomendas" Header="Encomendas" HorizontalAlignment="Left" Height="410" Margin="542,175,0,0" VerticalAlignment="Top" Width="239"/>
        <Button x:ConnectionId='13' Content="Ver detalhes" HorizontalAlignment="Left" Margin="542,614,0,0" VerticalAlignment="Top"                       />

    </Grid>

</Page>

